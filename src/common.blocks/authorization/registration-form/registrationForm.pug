include ../../buttons/base-button/baseButton
include ../../svg-icon/svgIcon

.authorization-form.auth-form
    .auth-form__main-content
        .auth-form__field-wrapper
            label.auth-form__field-label(for="email") Email
            input.auth-form__field(type="email", id="email", name="email")
        .auth-form__field-wrapper
            label.auth-form__field-label(for="nickname") Nickname
            input.auth-form__field(type="text", id="nickname", name="nickname")
        .auth-form__field-wrapper
            label.auth-form__field-label(for="password") Password
            input.auth-form__field(type="password", id="password", name="password")
        .auth-form__field-wrapper
            label.auth-form__field-label(for="passConfirm") Password again
            input.auth-form__field(type="password", id="passConfirm", name="passConfirm")
        label.auth-form__checkbox-wrapper I agree with the terms of service and privacy policy
            input.auth-form__checkbox-input(type="checkbox")
            .auth-form__checkbox 
                span.material-icons-round done
        +baseButton({ width: 362, height: 66, text: 'Registration', withArrow: true })(class="auth-form__action-btn")
        button.auth-form__sign-in-with-social
            +svgIcon('facebook-colored')
            | Log in with Facebook
        button.auth-form__sign-in-with-social
            +svgIcon('google-colored')
            | Log in with Google
    .auth-form__footer-wrapper
        .auth-form__footer
            span Already have an account?&nbsp;
            a.auth-form__footer__link(href="#") Log in
