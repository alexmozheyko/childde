mixin baseButton({ text, withArrow, bgColor = 'var(--red-color)', color = 'var(--text-white)' })
    button.base-btn(
        style = `background-color: ${ bgColor }; color: ${ color }`,
        class = withArrow ? 'base-btn--animated' : ''
    )&attributes(attributes)
        if withArrow
            span.base-btn__icon.base-btn__icon--left.material-icons-round(style=`color: ${ color }`) 
                | keyboard_arrow_right
        span.base-btn__content #{ text }
        if withArrow
            span.base-btn__icon.base-btn__icon--right.material-icons-round(style=`color: ${ color }`) 
                | keyboard_arrow_right