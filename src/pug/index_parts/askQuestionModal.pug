include ../mixins/baseBtn

mixin colorChoiceBtn({ color, icon, withBorder })
    button.question-modal__color-btn(
        style = `background-color: ${ color }`, 
        class = withBorder ? 'question-modal__color-btn--bordered' : ''
    )
        img(src=`./assets/icons/${ icon }.svg`)

mixin optionBtn({ icon, text })
    button.question-modal__option-btn
        img(src=`./assets/icons/${ icon }.svg`)
        span &nbsp; #{ text }

.question-modal-wrapper
    .question-modal
        .question-modal__cover
            .question-modal__header 
                .question-modal__header__title Frage stellen
                button.base-icon-btn.question-modal__close-btn
                    img(src="./assets/icons/close.svg")
            textarea.question-modal__textarea(placeholder="Welche frage m√∂chtest du beantworten?", rows="3")
        .question-modal__cover-colors#qCoverColors
            +colorChoiceBtn({ color: '#ffffff', icon: 'check_black', withBorder: true })
            +colorChoiceBtn({ color: '#fabb4f', icon: 'list_white' })
            +colorChoiceBtn({ color: '#75d0c4', icon: 'list_white' })
            +colorChoiceBtn({ color: '#ffcf62', icon: 'list_white' })
            +colorChoiceBtn({ color: '#9494c5', icon: 'list_white' })
            +colorChoiceBtn({ color: '#8ba4c6', icon: 'list_white' })
            +colorChoiceBtn({ color: '#ff7150', icon: 'list_white' })
            +colorChoiceBtn({ color: '#e57497', icon: 'list_white' })
        .question-modal__options-wrapper 
            .question-modal__options 
                +optionBtn({ icon: 'book', text: 'Themes' })
                +optionBtn({ icon: 'picture', text: 'Titelbild' })
                +optionBtn({ icon: 'pencil', text: 'Details' })
        .question-modal__bottom-container.q-bottom-container
            .q-bottom-container__user-select.q-user-select#qUserSelect
                .q-user-select__avatar
                    img(src="./assets/images/question-vote-avatar.png")
                span.q-user-select__name Philip Djones
                .q-user-select__icon 
                    img(src="./assets/icons/select_arrow_down.svg")
            +baseBtn({ 
                text      : 'Speichern',
                withArrow : true,
                width     : 208,
                height    : 66,
                bgColor   : 'var(--red-color)',
                color     : 'var(--text-white)',
                iconType  : 'white'
            })(class="q-bottom-container__btn")


